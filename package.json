{
  "name": "arx-level-generator",
  "version": "0.17.0",
  "description": "A tool for creating Arx Fatalis maps",
  "main": "build/generate.js",
  "type": "module",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "publish-map": "export OUTPUTDIR=$(pwd)/dist/ && npm run generate && npm run compile && npm run pack",
    "dev": "npm run generate && npm run compile && npm run run",
    "generate": "tsc && tsc-alias && node --require dotenv/config --enable-source-maps ./build/index.js",
    "compile": "./scripts/compile.sh",
    "run": "./scripts/run.sh",
    "pack": "./scripts/pack.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arx-tools/arx-level-generator.git"
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/arx-tools/arx-level-generator/issues"
  },
  "homepage": "https://github.com/arx-tools/arx-level-generator#readme",
  "dependencies": {
    "arx-convert": "^7.0.1",
    "arx-header-size": "^2.1.0",
    "color-rgba": "^2.4.0",
    "dotenv": "^16.0.3",
    "nanoid": "^4.0.2",
    "node-pkware": "^3.0.4",
    "seedrandom": "^3.0.5",
    "sharp": "^0.32.1",
    "sharp-bmp": "^0.1.5",
    "three": "^0.152.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/color-rgba": "^2.1.0",
    "@types/node": "^20.2.5",
    "@types/seedrandom": "^3.0.5",
    "@types/sharp": "^0.31.1",
    "@types/three": "^0.152.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "arx-fatalis"
  ]
}
