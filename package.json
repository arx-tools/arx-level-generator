{
  "name": "arx-level-generator",
  "version": "0.11.0",
  "description": "A tool to generate random Arx Fatalis maps",
  "main": "src/electron/index.js",
  "scripts": {
    "dev": "npm run generate:gamedir:linux && npm run compile:gamedir:linux && npm run game:linux",
    "generate": "node src/generate.js",
    "generate:gamedir:win": "set OUTPUTDIR=C:/Program Files/Arx Libertatis&&node src/generate.js",
    "generate:gamedir:linux": "export OUTPUTDIR=/home/lali/projektek/arx/ArxLibertatis/build&&node src/generate.js",
    "generate:watch": "nodemon src/generate.js --ignore dist",
    "compile": "sh scripts/compile.sh",
    "compile:gamedir:win": "set OUTPUTDIR=/c/Program Files/Arx Libertatis&&sh scripts/compile.sh",
    "compile:gamedir:linux": "export OUTPUTDIR=/home/lali/projektek/arx/ArxLibertatis/build&&sh scripts/compile.sh",
    "game:linux": "/home/lali/projektek/arx/ArxLibertatis/build/arx --loadlevel 1",
    "launcher:build": "node src/electron/build.js",
    "launcher:build:watch": "nodemon --watch src src/electron/build.js -e js,jsx,css,html,png --ignore src/electron/build",
    "launcher:run": "electron ./src/electron/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meszaros-lajos-gyorgy/arx-level-generator.git"
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/meszaros-lajos-gyorgy/arx-level-generator/issues"
  },
  "homepage": "https://github.com/meszaros-lajos-gyorgy/arx-level-generator#readme",
  "dependencies": {
    "arx-level-json-converter": "^1.0.5",
    "color-rgba": "^2.3.0",
    "nanoid": "^3.2.0",
    "node-pkware": "^1.0.0",
    "ramda": "^0.27.1",
    "ramda-adjunct": "^2.35.0",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "classnames": "^2.3.1",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "esbuild": "^0.14.14",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "build": {
    "appId": "com.electron.arx-level-generator",
    "productName": "Arx Level Generator",
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
