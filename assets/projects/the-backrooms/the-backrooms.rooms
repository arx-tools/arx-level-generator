# pragma tile-size 50

define office {
  # also has mold decal
  wall custom projects/the-backrooms/textures backrooms-[stone]-wall.jpg
  floor custom projects/the-backrooms/textures backrooms-[fabric]-carpet-dirty.jpg
  ceiling custom projects/the-backrooms/textures backrooms-[stone]-ceiling-tile.jpg
}

define corridor {
  # also has mold decal
  wall custom projects/the-backrooms/textures backrooms-[stone]-wall2.jpg
  floor custom projects/the-backrooms/textures backrooms-[fabric]-carpet-dirty.jpg
  ceiling custom projects/the-backrooms/textures backrooms-[stone]-ceiling-tile.jpg
}

define pool {
  wall custom projects/the-backrooms/textures pool-room-white-mosaic-tile.jpg
  floor custom projects/the-backrooms/textures pool-room-white-mosaic-tile.jpg
  ceiling custom projects/the-backrooms/textures pool-room-white-mosaic-tile.jpg
}

define broken-wall {
  wall arx l1_temple_[stone]_wall03.jpg
  floor arx l1_temple_[stone]_wall03.jpg
  ceiling arx l1_temple_[stone]_wall03.jpg
}

