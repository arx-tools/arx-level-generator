{
  "name": "arx-level-generator-ts",
  "version": "1.0.0",
  "description": "",
  "main": "build/generate.js",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "generate": "npm run generate:validate && npm run generate:build && npm run generate:run",
    "generate:validate": "tsc --project ./tsconfig.json",
    "generate:build": "esbuild ./src/generate.ts --bundle --platform=node --minify --outdir=build --sourcemap --external:arx-level-json-converter --external:color-rgba --external:nanoid --external:node-pkware --external:seedrandom",
    "generate:run": "node --require dotenv/config --enable-source-maps ./build/generate.js",
    "compile": "sh scripts/compile.sh",
    "compile:gamedir:win": "set OUTPUTDIR=/c/Program Files/Arx Libertatis&&sh scripts/compile.sh",
    "compile:gamedir:linux": "export OUTPUTDIR=/home/lali/projektek/arx/ArxLibertatis/build&&sh scripts/compile.sh"
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "arx-level-json-converter": "^1.3.1",
    "color-rgba": "^2.4.0",
    "nanoid": "^3.3.4",
    "node-pkware": "^1.0.1",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/color-rgba": "^2.1.0",
    "@types/node": "^17.0.35",
    "@types/seedrandom": "^3.0.2",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.39",
    "nodemon": "^2.0.16",
    "typescript": "^4.6.4"
  }
}
