{
  "name": "arx-level-generator-ts",
  "version": "1.0.0",
  "description": "",
  "main": "build/generate.js",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "generate": "npm run generate:validate && npm run generate:build && npm run generate:run",
    "generate:validate": "tsc src/generate.ts --noEmit --skipLibCheck --target esnext --moduleResolution node",
    "generate:build": "esbuild ./src/generate.ts --bundle --platform=node --minify --outdir=build --sourcemap --external:./node_modules/*",
    "generate:run": "node build/generate.js --require dotenv/config --enable-source-maps"
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "arx-level-json-converter": "^1.3.1",
    "color-rgba": "^2.4.0",
    "nanoid": "^3.3.4",
    "node-pkware": "^1.0.1",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/color-rgba": "^2.1.0",
    "@types/node": "^17.0.35",
    "@types/seedrandom": "^3.0.2",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.39",
    "nodemon": "^2.0.16",
    "typescript": "^4.6.4"
  }
}
